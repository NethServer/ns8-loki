import sys
import json
import agent
import subprocess

data = json.load(sys.stdin)

if data['action'] == 'terminated':
    agent.unset_env('CLOUD_LOG_MANAGER_START_TIME')
    agent.unset_env('CLOUD_LOG_MANAGER_ADDRESS')
    agent.unset_env('CLOUD_LOG_MANAGER_TENANT')

    subprocess.run(["systemctl", "--user", "disable", "--now", "cloud-log-manager-forwarder.service"], 
                    stdout=sys.stderr,
                    stderr=sys.stderr,
                    check=True)
