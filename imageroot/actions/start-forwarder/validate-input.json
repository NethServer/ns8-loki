{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "http://schema.nethserver.org/loki/set-forwarder.json",
    "title": "Configure Loki 2 Syslog",
    "description": "Configure and start Loki 2 Syslog instance.",
    "type": "object",
    "required": [
        "syslog_ip",
        "syslog_port",
        "syslog_protocol",
        "syslog_format"
    ],
    "properties": {
        "syslog_ip": {
            "type": "string",
            "description": "Syslog server ip address."
        },
        "syslog_port": {
            "type": "integer",
            "description": "Syslog server port."
        },
        "syslog_protocol": {
            "type": "string",
            "description": "Trasmission protocol."
        },
        "syslog_format": {
            "type": "string",
            "description": "Logs RFC format."
        }
    }
}
